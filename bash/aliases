#TODO : Work out a better fallback than this hack for multiple folders
function p {
if [ -d ~/Development/Projects/$1 ]; then
  cd ~/Development/Projects/$1;
else
  cd ~/Development/Projects/Clear/$1;
fi
}

#System commands
alias cls='tput clear'
alias flushdns='dscacheutil -flushcache'
alias reload="source ~/.bash_profile"
alias edit_hostfile="$EDITOR /private/etc/hosts"

#Path helper
alias find_dead_path_items='echo $PATH |tr ':' '\n' |xargs ls -ld'

#Editor
alias m="mate ."
