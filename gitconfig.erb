[user]
  name = Tom Meier
  email = tom@venombytes.com
  signingkey = <%= ENV["GPG_SIGNING_KEY"] %>
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  praise = blame
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; code `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  edit-modified = "!f() { git ls-files --modified | cut -f2 | sort -u ; }; code `f`"

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = code --wait
  autocrlf = input
  whitespace = trailing-space,space-before-tab
  ignorecase = false
  pager = diffr | less -FXR
[interactive]
    diffFilter = diffr
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
# [github]
#   Deprecated: Do not store GitHub tokens in gitconfig.
#   Use `gh auth login` or git credential helpers instead.
#   See: https://cli.github.com/
[diff]
  renamelimit=0
  rename-threshold=80
  renames = copies
[branch]
  autosetupmerge = true
[push]
  default = simple
  autoSetupRemote = true
[rerere]
  enabled = true
  autoupdate = true
[merge]
  stat = true
[commit]
  verbose = true
  gpgsign = true
[url "git@github.com:"]
    insteadOf = https://github.com/
