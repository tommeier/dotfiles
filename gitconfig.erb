[user]
  name = Tom Meier
  email = tom@venombytes.com
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  df = !git diff | subl
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; mate `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  edit-modified = "!f() { git ls-files --modified | cut -f2 | sort -u ; }; mate `f`"
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = subl --wait
  autocrlf = input
  whitespace = trailing-space,space-before-tab
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = tommeier
[diff]
  renamelimit=0
  rename-threshold=80
  renames = copies
  mnemonicprefix = true
[branch]
  autosetupmerge = true
[push]
  default = tracking
[rerere]
  enabled = true
  autoupdate = true
[merge]
  stat = true

